<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewAccidentes">

    <LinearLayout
    android:layout_width="330dp"
    android:layout_height="676dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/txt_view_accidentes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Accidentes"
        android:textColor="#48EC3C"
        android:textSize="40sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bn_informar_accidente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/botones_redondos_green"
        android:text="Informar Accidente"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bn_llevar_accidente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/botones_redondos_green"
        android:text="Llevar Accidente"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bn_dardealta_accidente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/botones_redondos_green"
        android:text="Dar de alta"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>